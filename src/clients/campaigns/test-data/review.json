{
  "id": "REVIEW-CAMPAIGN-UUID",
  "name": "App Store Review Request",
  "createdAt": "TIMESTAMP",
  "editedAt": "TIMESTAMP",
  "orgEditable": false,
  "responseRequired": true,
  "type": "Review",
  "startDate": null,
  "endDate": null,
  "maxParticipants": null,
  "priority": 1,
  "repeating": true,
  "triggers": [
    {
      "id": "TRIGGER-ID",
      "criteria": [
        {
          "description": "Last Participation in Campaign",
          "dataType": "Number",
          "query": {
            "type": "count",
            "object": "event",
            "select": [
              "$timestamp"
            ],
            "sort": {
              "dataType": "DateTime",
              "field": "$timestamp",
              "ascending": false
            },
            "where": [
              {
                "field": "$appUserId",
                "value": "SOME_APP_USER_ID",
                "operator": "Is"
              },
              {
                "field": "params.$campaignId",
                "value": "THIS_CAMPAIGN_ID",
                "operator": "Is"
              },
              {
                "field": "$timestamp",
                "value": "CURRENT_TIMESTAMP",
                "operator": "IsGreaterThan",
                "interval": {
                  "value": 30,
                  "timeUnit": "Days",
                  "addToValue": false
                }
              }
            ]
          },
          "value": "query.count",
          "operator": "Is",
          "compareTo": 0
        },
        {
          "description": "Last Participation in Campaign",
          "dataType": "Number",
          "query": {
            "type": "count",
            "object": "event",
            "select": [
              "$timestamp"
            ],
            "sort": {
              "dataType": "DateTime",
              "field": "$timestamp",
              "ascending": false
            },
            "where": [
              {
                "field": "$appUserId",
                "value": "SOME_APP_USER_ID",
                "operator": "Is"
              },
              {
                "field": "params.$campaignId",
                "value": "OTHER_CAMPAIGN_ID",
                "operator": "Is"
              },
              {
                "field": "$timestamp",
                "value": "CURRENT_TIMESTAMP",
                "operator": "IsGreaterThan",
                "interval": {
                  "value": 1,
                  "timeUnit": "Days",
                  "addToValue": false
                }
              }
            ]
          },
          "value": "query.count",
          "operator": "Is",
          "compareTo": 0
        },
        {
          "description": "Latest Survey Question Response",
          "dataType": "Boolean",
          "query": {
            "type": "first",
            "object": "event",
            "select": [
              "$timestamp",
              "params.$value"
            ],
            "sort": {
              "dataType": "DateTime",
              "field": "$timestamp",
              "ascending": false
            },
            "where": [
              {
                "field": "$appUserId",
                "value": "SOME_APP_USER_ID",
                "operator": "Is"
              },
              {
                "field": "params.$campaignId",
                "value": "SOME_CAMPAIGN_ID",
                "operator": "Is"
              }
            ]
          },
          "value": "query.params.$value",
          "operator": "Is",
          "compareTo": true
        }
      ]
    }
  ],
  "display": {
    "type": "Popup",
    "automatic": false,
    "delay": 1000
  },
  "typeData": {
    "review": {
      "title": "Leave us a review!",
      "subtitle": "If you enjoy Userbuddy and think others will too, a 5-star review really helps us help other people like you. We'd really appreciate it!",
      "webLink": "https://www.g2.com/products/activecampaign/reviews"
    }
  }
}
